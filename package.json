{
    "name": "library-starter",
    "version": "1.0.0",
    "description": "Library starter kit with webpack",
    "main": "webpack.config.js",
    "author": "Jarek Jegorow",
    "license": "MIT",
    "scripts": {
        "dev": "cross-env NODE_ENV=development webpack --progress --colors --watch",
        "build": "cross-env NODE_ENV=development webpack && cross-env NODE_ENV=production webpack",
        "test": "mocha --require babel-core/register --colors ./test/*.spec.js",
        "test:watch": "mocha --require babel-core/register --colors -w ./test/*.spec.js"
    },
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-eslint": "^8.2.4",
        "babel-loader": "^7.1.4",
        "babel-plugin-add-module-exports": "^0.2.1",
        "babel-preset-env": "^1.7.0",
        "chai": "^4.1.2",
        "cross-env": "^5.2.0",
        "eslint": "^5.0.0",
        "eslint-config-standard": "^11.0.0",
        "eslint-loader": "^2.0.0",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-promise": "^3.8.0",
        "eslint-plugin-standard": "^3.1.0",
        "mocha": "^5.2.0",
        "uglifyjs-webpack-plugin": "^1.2.6",
        "webpack": "^4.12.0",
        "webpack-cli": "^3.0.8"
    }
}
